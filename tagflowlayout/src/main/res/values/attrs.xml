<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TagFlowLayout">
        <attr name="tagSpacing" format="dimension" />
        <attr name="tagSpacingHorizontal" format="dimension"/>
        <attr name="tagSpacingVertical" format="dimension" />
        <attr name="singleLine" format="boolean" />
        <attr name="singleSelection" format="boolean" />
        <attr name="selectionRequired" format="boolean" />
        <attr name="selectMax" format="integer"/>
    </declare-styleable>

    <declare-styleable name="FlowLayout">
        <!-- Horizontal spacing between two items being laid out. -->
        <attr format="dimension" name="itemSpacing"/>
        <!-- Vertical Spacing between two lines of items being laid out. -->
        <attr format="dimension" name="lineSpacing"/>
    </declare-styleable>
    <item name="row_index_key" type="id"/>
</resources>